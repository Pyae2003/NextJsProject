generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model info {
  id      String @id @default(cuid())
  name    String
  content String
  status  postStatus @default(IN_PROGRESS)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum postStatus {
  DONE
  IN_PROGRESS
}
